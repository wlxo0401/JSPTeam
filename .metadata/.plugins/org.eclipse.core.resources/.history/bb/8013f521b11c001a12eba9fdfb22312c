<%
//글 정보 변수 받아오기 및 초기화
String id = (String)session.getAttribute("__id");
if(id==null){
	id = "ID101";
}
String tno = request.getParameter("_tno");
int textNo;
String userID = "";

if(tno==null){
	textNo = 1;
	tno = "1";
}else{
	textNo = Integer.parseInt(tno);
}

//글 정보 초기화 변수 선언
String name="";
String title="";
String content="";

//DB연동 및 데이터 불러오기
Class.forName("oracle.jdbc.driver.OracleDriver");//1.DB드라이버잡기
	System.out.println("JoinCheck 드라이버잡기");
	Connection conn = DriverManager.getConnection(
			"jdbc:oracle:thin:@127.0.0.1:1521:xe", "jsptest", "1234");//2.커넥션객체생성해서 커넥트
	Statement stmt = conn.createStatement();//3.커넥트 객체로 stmt 객체를 만든다
	ResultSet rs=stmt.executeQuery("SELECT * FROM userInfo WHERE id='" + id + "'");
while(rs.next()){
	name = rs.getString("name");
}
rs.close();
stmt.close();
conn.close();
DBConnect dbc = new DBConnect();
dbc.connectDB();
dbc.rs = dbc.setQuery("SELECT * FROM textList WHERE no="+textNo);
while(dbc.rs.next()){
	userID = dbc.rs.getString("userID");
}
dbc.rs = dbc.setQuery("SELECT * FROM userinfo WHERE id='"+ userID + "'");
while(dbc.rs.next()){
	name = dbc.rs.getString("name");
}
dbc.rs = dbc.setQuery("SELECT * FROM textList WHERE no="+textNo);
while(dbc.rs.next()){
	title = dbc.rs.getString("title");
}
dbc.rs = dbc.setQuery("SELECT * FROM textList WHERE no="+textNo);
while(dbc.rs.next()){
	content = dbc.rs.getString("content");
}
dbc.closeDB();
%>

