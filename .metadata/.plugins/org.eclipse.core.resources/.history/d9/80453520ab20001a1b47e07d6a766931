		tcontent[i][j] = rs.getString("content");
		tdate[i][j] = (rs.getString("data")).substring(0, 10);
		j++;
		if(j>=10){
			j = 0;
			i++;
		}
	}
rs.close();
stmt.close();
conn.close();


